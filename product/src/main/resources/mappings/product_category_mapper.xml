<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.tee.springcloudsel.springcloudsel.mapper.ProductCategoryMapper">
    <resultMap id="productCategoryResultMap" type="com.tee.springcloudsel.springcloudsel.domain.ProductCategory">
        <id property="categoryId" column="category_id" jdbcType="VARCHAR"/>
        <result property="categoryName" column="category_name" jdbcType="VARCHAR"/>
        <result property="categoryType" column="category_type" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="allColumns">
        category_id,        category_name,        category_type,
        create_time,        update_time
    </sql>

    <select id="selectAll" resultMap="productCategoryResultMap">
        SELECT
          <include refid="allColumns"/>
        FROM
          PRODUCT_CATEGORY
        ORDER BY create_time desc;
    </select>
</mapper>

